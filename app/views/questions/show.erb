<div class="question">
<p><%= @question.title %></p>
<p><%= @question.body %></p>
<p><a href='/users/<%=@question.user.id%>'><%= @question.user.username %></a></p>
<p><%= @question.created_at %></p>
</div>

<% @comments.each do |comment| %>
  <div class="comments">
    <p><%=comment.comment%></p>
    <p><a href='/users/<%=comment.user.id%>'><%=comment.user.username%></a></p>
    <p><%=comment.created_at%></p>
    -------------
    <br>
  </div>
  <%end%>

