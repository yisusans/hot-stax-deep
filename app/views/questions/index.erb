<div class="question-wrapper">
  <% @questions.each do |question| %>
    <div class="question_main">
      <a href="/questions/<%=question.id%>"><h1><%= question.title %></h1></a>
      <a href="/users/<%=question.user.id%>"><h3><%= question.user.username%></h3></a>
      <p><%= question.body[0..30] + "..." %></p>
    </div>
  <% end %>
</div>

<% if @errors %>
  <% @errors.each do |error_message| %>
    <p><%= error_message %></p>
  <% end %>
<% end %>

<%if logged_in?%>
  <div>
    <form class="question-box" action='/questions' method='post'>
      <input id='title-text-box' type='text' name='title' placeholder='Title'/>
      <textarea id='body-text-box' name='body' placeholder='Post'></textarea>
      <input type="hidden" name="user_id" value="<% current_user.id %>">
      <input type='submit' value='Post'/>
    </form>
  </div>
<%end%>
